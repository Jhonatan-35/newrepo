<div class="container">
  <h1><%= title %></h1>

  <!-- Check if accountData exists before accessing properties -->
  <% if (accountData) { %>
    

    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/management">Go to Inventory Management</a></p>
    <% } %>
  <% } %>

  <% if (message && message.length) { %>
    <div class="flash-message"><%= message %></div>
  <% } %>
  
  <ul class="manage-links">
    <li><a href="/inv/add-classification">Add New Classification</a></li>
    <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
  </ul>

  <h2>Manage Inventory</h2>
  <p>Choose a classification to see those vehicles</p>

  <!-- Classification dropdown -->
  <%- classificationSelect %>

  <!-- Table to inject inventory data into -->
  <table id="inventoryDisplay"></table>

  <!-- Message if JavaScript is disabled -->
  <noscript>JavaScript must be enabled to use this page.</noscript>
  <script src="../../js/inventory.js"></script>
</div>